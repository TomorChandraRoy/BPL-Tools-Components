{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "b-blocks/bpl-test-plugin",
  "version": "1.0.0",
  "title": "Bpl Test Plugin",
  "category": "widgets",
  "description": "Short description of the Bpl-test-plugin",
  "keywords": ["bpl, test, plugin"],
  "textdomain": "b-blocks",
  "attributes": {
    "alignment": {
      "type": "string",
      "default": "center"
    },

    "width": {
      "type": "object",
      "default": {
        "desktop": "600px",
        "tablet": "400px",
        "mobile": "200px"
      }
    },

    "boxValues": {
      "type": "object",
      "default": {
        "top": "40px",
        "right": "40px",
        "bottom": "40px",
        "left": "40px"
      }
    },
    "option": {
      "type": "object",
      "default": {
        "color": "#FF6600"
      }
    },
    "textColor": {
      "type": "object",
      "default": {
        "color": "#000000",
        "hexColor": "#6600FF"
      }
    },
    "colors": {
      "type": "object",
      "default": {
        "color": "#69df1f",
        "bg": "#DC4C64"
      }
    },
    "cssCode": {
      "type": "string",
      "default": ""
    },
    "columns": {
      "type": "object",
      "default": {
        "desktop": 3,
        "tablet": 2,
        "mobile": 1
      }
    },
    "border": {
      "type": "object",
      "default": {
        "width": "1px",
        "style": "solid",
        "color": "#000000",
        "side": "all",
        "radius": "5px"
      }
    },
    "image": {
      "type": "string",
      "default": ""
    },
    "Separator":{
      "type":"object",
      "default":{
        "width": "50%", 
        "height": "170px", 
        "style": "solid", 
         "color": "#1556bf"
      }
    },


    "shadow": {
      "type": "array",
      "default": [
        {
          "hOffset": "0px",
          "vOffset": "0px",
          "blur": "4px",
          "spreed": "5px",
          "color": "#7090b0",
          "isInset": false
        }
      ]
    },
    "backgroundColor": {
      "type": "string",
      "default": "#d5d8dc"
    },
    "items": {
      "type": "array",
      "default": ["Item 1", "Item 2", "Item 3"]
    },
    "typography": {
      "type": "object",
      "default": {
        "fontSize": {
          "desktop": 20,
          "tablet": 14,
          "mobile": 12
        }
      }
    }
  },

  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {}
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./view.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}
